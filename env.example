NODE_ENV=development
PORT=3001

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auth_service?schema=public

REDIS_URL=redis://localhost:6379

JWT_ACCESS_SECRET=your-access-secret-key-min-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-key-min-64-characters-long-for-security-purposes
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

CORS_ORIGINS=http://localhost:3000,http://localhost:8080

THROTTLE_TTL=60000
THROTTLE_LIMIT=100
THROTTLE_AUTH_TTL=60000
THROTTLE_AUTH_LIMIT=10

MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

INTERNAL_API_KEY=your-internal-api-key-min-32-characters

PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
